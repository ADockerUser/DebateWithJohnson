<!DOCTYPE html>
<html>
  <head>
    <title>#DebateWithBernie</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name='viewport' content='width=500'>
    <meta property='og:title' content='#DebateWithBernie' />
    <meta name='twitter:card' content='summary_large_image'>
    <meta name='twitter:site' content='@berniesanders'>
    <meta name='twitter:title' content='Create your image to #DebateWithBernie!'>
    <meta name='twitter:description' content='Just upload a photo, import from Facebook, or snap a selfie with your webcam. Then, use our simple editor to position it within the frame, and share it on Facebook and Twitter to #DebateWithBernie!'>
    <% if @image %>
      <meta property='og:image' content='<%= @image.file.url %>' />
      <meta property='og:url' content='<%= image_share_url(@image.id) %>' />
      <meta property='og:description' content='I created a picture to support Bernie Sanders at the debate! Make yours to #DebateWithBernie.' />
      <meta name='twitter:image' content='<%= @image.file.url %>'>
    <% else %>
      <meta property='og:image' content='<%= asset_url('/images/bernie.png') %>' />
      <meta property='og:description' content='Make your image to #DebateWithBernie!' />
      <meta name='twitter:image' content='<%= asset_url('/images/bernie.png') %>' />
    <% end %>
  </head>
  <body>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '<%= ENV['FB_APP_ID'] %>',
          xfbml      : true,
          version    : 'v2.5'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = '//connect.facebook.net/en_US/sdk.js';
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>

    <%= yield %>

    <%= render partial: 'footer' %>
  </body>
</html>
